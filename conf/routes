# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# The controller showing the home page
GET     /                       controllers.HomeController.index()

# Endpoint for plotting infection analysis for a given country code
# Example usage: GET /plot/US
GET     /plot/:countryCode      controllers.PlotAnalysisController.plotAnalysis(countryCode: String)

# Endpoint for retrieving a map of current 7-day incidence per 100k for each country
# Returns a JSON object with a map of ISO2 codes to incidence values
# Example usage: GET /country-incidence-map
GET     /country-incidence-map  controllers.PlotAnalysisController.countryIncidenceMap()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file           controllers.Assets.versioned(path="/public", file: Asset)

